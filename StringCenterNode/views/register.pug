extends layout

block content
    .container
        .jumbotron
            h2 Register
            br
            form(action='register', method='post')
                .form-group
                    label() First name
                    input#firstName.form-control(type='text', name='firstName')
                .form-group
                    label() Last name
                    input#lastName.form-control(type='text', name='lastName')
                .form-group
                    label() Username
                    input#username.form-control(type='text', name='username')
                .form-group
                    label() Password
                    input#password.form-control(type='password', name='password')
                .form-group
                    label() Confirm Password
                    input#confirmPassword.form-control(type='password', name='confirmPassword')
                .form-group
                    input.btn.btn-success(type='submit', value='Sign up')

