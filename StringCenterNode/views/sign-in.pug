extends layout

block content
    .container
        .jumbotron
            h2 Sign in
            br
            form(action='sign-in', method='post')
                .form-group
                    label() Username
                    input#username.form-control(type='text', name='username')
                .form-group
                    label() Password
                    input#password.form-control(type='password', name='password')
                .form-group
                    input.btn.btn-success(type='submit', value='Sign up')
